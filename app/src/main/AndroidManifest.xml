<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.home.ines.study">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".client.Study"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.Setting">
            <intent-filter>
                <action android:name="org.home.ines.Setting" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.EpochSettings">
            <intent-filter>
                <action android:name="org.home.ines.EpochSetting" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.SchoolYearSettings"
            android:label="@string/title_activity_school_year_settings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".gui.SubjectList">
            <intent-filter>
                <action android:name="org.home.ines.SubjectList" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.SubjectCreator">
            <intent-filter>
                <action android:name="org.home.ines.SubjectCreator" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.SubjectView">
            <intent-filter>
                <action android:name="org.home.ines.SubjectView" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>

